{
  "name": "elorm-amelordzi-portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio website for Elorm Kofi Amelordzi",
  "main": "index.js",
  "scripts": {
    "start": "live-server --port=3000",
    "build:css": "postcss src/css/tailwind.css -o public/css/styles.css",
    "watch:css": "postcss src/css/tailwind.css -o public/css/styles.css --watch",
    "dev": "concurrently \"npm run watch:css\" \"npm run start\""
  },
  "keywords": ["portfolio", "web development", "frontend"],
  "author": "Elorm Kofi Amelordzi",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "live-server": "^1.2.2",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.0"
  }
}
